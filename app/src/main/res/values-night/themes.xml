<resources>
    <!-- Base application theme. -->
    <style name="Theme.IceBrowser" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:itemTextAppearance">@style/PopupMenuText</item>
        <item name="android:itemBackground">@color/background_active</item>

        <item name="android:alertDialogTheme">@style/AlertDialog</item>
    </style>

    <style name="PopupMenuText" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:textAppearance">@style/PopupMenuText</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="keyboard_style" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:foreground">@drawable/ripple_rounded</item>
        <item name="android:background">@color/background_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:background">#FFCC66</item>
        <item name="android:width">15dp</item>
        <item name="android:height">15dp</item>
    </style>

</resources>