<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/window_main_browser_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <FrameLayout
            android:id="@+id/window_main_framelayout_webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp" />

        <include
            android:id="@+id/window_gallery_layout"
            layout="@layout/window_gallery"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            />


        <include
            android:id="@+id/window_main_top_bar_layout"
            layout="@layout/window_main_top_navbar" />

        <ProgressBar
            android:id="@+id/window_main_progressbar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:max="100"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/window_main_top_bar_layout" />

        <LinearLayout
            android:id="@+id/keyboard_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_dark"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/window_resizer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/window_main_resizer"
            android:rotation="-45"
            android:src="@drawable/window_resize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/window_ice_browser_bubble"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/window_ice_bubble"
        android:src="@mipmap/ic_launcher_round"
        android:visibility="gone" />

</FrameLayout>

