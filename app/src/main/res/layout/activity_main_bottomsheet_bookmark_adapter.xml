<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:layout_margin="10dp"
    android:maxHeight="300dp"
    android:id="@+id/main_bottomsheet_bookmark_adapter_layout"
    android:background="@drawable/bottomsheet_menu_background_round"
    android:backgroundTint="#555555"
    android:foreground="@drawable/ripple_rounded"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/main_bookmark_item_adapter_favicon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:contentDescription="@string/main_bookmark_item_adapter_favicon_desc"
        android:src="@drawable/tabs_favicon_not_found"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:orientation="vertical"
        android:layout_marginEnd="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/main_bookmark_item_adapter_tab_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop="7dp"
            android:paddingBottom="2dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/main_bookmark_item_adapter_tab_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop="2dp"
            android:paddingBottom="7dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </LinearLayout>


    <ImageView
        android:id="@+id/main_bookmark_item_adapter_menu"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:foreground="@drawable/ripple_rounded"
        android:contentDescription="@string/main_bookmark_item_adapter_tab_menu_desc"
        android:src="@drawable/tabs_bookmark_item_menu_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>